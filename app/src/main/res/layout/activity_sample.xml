<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kwizzapp.com.kwizzapp.SampleActivity">

    <LinearLayout
        android:id="@+id/anim_layout"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_app_launcher"/>

        <TextView
            android:theme="@style/TitleText"
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space10dp"
            android:padding="@dimen/space10dp"
            android:text="App Name"
            android:gravity="center"/>

        <TextView
            android:theme="@style/DescriptionText"
            android:id="@+id/app_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start earning from your knowledge!"
            android:gravity="center"/>

        <com.google.android.gms.common.SignInButton
            android:layout_marginTop="100dp"
            android:id="@+id/buttonSignIn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textAlignment="center" />
    </LinearLayout>




<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="TransferPointsVm"
            type="kwizzapp.com.kwizzapp.viewmodels.TransferPoints" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space10dp"
                android:padding="@dimen/space10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space10dp"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/inputLayoutAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/space10dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/editTextAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Amount"
                            android:text="@={TransferPointsVm.amount}" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/inputLayoutMobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/space10dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/editTextMobileNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Mobile Number"
                            android:text="@={TransferPointsVm.transferTo}" />
                    </android.support.design.widget.TextInputLayout>


                    <Button
                        android:id="@+id/buttonTransferPoints"
                        style="@style/ThemeButton"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/space10dp"
                        android:background="@drawable/round_corner_button"
                        android:text="Transfer"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</layout>

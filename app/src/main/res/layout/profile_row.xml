<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data class = "ProfileDetailBinding">
        <variable
            name="ProfileDetailVm"
            type="kwizzapp.com.kwizzapp.viewmodels.SettingVm.ProfileVm"/>
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            app:cardCornerRadius="@dimen/dimen_2dp"
            app:cardElevation="@dimen/dimen_2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textLabelProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:padding="@dimen/dimen_5dp"
                    android:text="@{ProfileDetailVm.textLabel}" />


                <TextView
                    android:id="@+id/textDataProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/dimen_5dp"
                    android:text="@{ProfileDetailVm.textData}" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>
</layout>
